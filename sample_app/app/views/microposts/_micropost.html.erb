<li id="micropost-<%= micropost.id %>">
  <div class="avatar">
    <%= link_to gravatar_for(micropost.user), micropost.user %>
  </div>
  <div class="info">
    <p class="user"><%= link_to micropost.user.name, micropost.user %></p>
    <p class="content"><%= micropost.content %></p>
    <p class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </p>
  </div>

</li>